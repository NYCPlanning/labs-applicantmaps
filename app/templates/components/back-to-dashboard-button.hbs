{{#if (eq model.project.currentStep.step 'development-site')}}
  {{#link-to "projects.edit.steps.development-site" model.project.id class="button gray"}}
    {{fa-icon 'arrow-left'}} Back
  {{/link-to}}
{{else if (eq model.project.currentStep.step 'project-area')}}
  {{#link-to "projects.edit.steps.project-area" model.project.id class="button gray"}}
    {{fa-icon 'arrow-left'}} Back
  {{/link-to}}
{{else if (eq model.project.currentStep.step 'rezoning')}}
  {{#link-to "projects.edit.steps.rezoning" model.project.id class="button gray"}}
    {{fa-icon 'arrow-left'}} Back
  {{/link-to}}
{{else}}
  {{#link-to "projects.show" model.project.id class="button gray"}}
    Cancel
  {{/link-to}}
{{/if}}
