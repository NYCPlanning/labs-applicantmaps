<div class="cell step large-8 large-offset-2 xxlarge-6 xxlarge-offset-3">
  <h1>Create New Project</h1>

  <div class="grid-x grid-margin-x">
    <div class="small-3 cell">
      <label for="project-name-field" class="text-right middle">
        Project Name
        {{fa-icon 'asterisk' transform='shrink-4' class="red"}}
      </label>
    </div>
    <div class="small-9 cell">
      {{input
        data-test-new-project-project-name
        type="text"
        value=model.projectName
        id="project-name-field"
        class="project-name-field"
        aria-describedby="project-name-field-help-text"
      }}
      <p class="help-text" id="project-name-field-help-text">(Required) Please use the name provided at the Informational Meeting with the Department of City Planning or the project address â€“ i.e. 120 Broadway</p>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="small-3 cell">
      <label for="applicant-name-field" class="text-right middle">
        Applicant Name
      </label>
    </div>
    <div class="small-9 cell">
      {{input
        data-test-new-project-applicant-name
        type="text"
        value=model.applicantName
        id="applicant-name-field"
        class="applicant-name-field"
      }}
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="small-3 cell">
      <label for="zap-project-id-field" class="text-right middle">
        Project Number
      </label>
    </div>
    <div class="small-9 cell">
      {{input
        data-test-new-project-project-number
        type="text"
        value=model.zapProjectId
        id="zap-project-id-field"
        class="zap-project-id-field"
        aria-describedby="zap-project-id-field-help-text"
      }}
      <p class="help-text" id="zap-project-id-field-help-text">
        (Optional) Please use the unique code provided by the Department of City Planning following an Informational Interest Meeting, often called a Pre-Application Statement (PAS) number - i.e. P2019K0088
      </p>
    </div>
  </div>

  <button
    type="button"
    class="button large expanded project-save-button"
    disabled={{eq model.currentStep.step 'project-creation'}}
    onclick={{action 'save' model}}
    data-test-create-new-project
  >
    Create New Project
  </button>

</div>
