{{#if model.underlyingZoning}}
  {{#project-geometry-edit/draw-lots-to-union
    mode=mode
    map=map
    geometricProperty=model.underlyingZoning as |selection|
  }}
    {{#selection.button
      handleClick=(action 'save')}}
      Save Zoning District
    {{/selection.button}}
  {{/project-geometry-edit/draw-lots-to-union}}

  {{#map.source options=(mapbox-geojson-source model.underlyingZoning) as |source|}}
    {{source.layer
      layer=underlyingZoningLayer
      before='boundary_country'
    }}
    {{source.layer
      layer=underlyingZoningLabelsLayer
      before='boundary_country'
    }}
  {{/map.source}}
{{/if}}

{{#map.source options=(mapbox-geojson-source model.developmentSite) as |source|}}
  {{source.layer
    layer=developmentSiteLayer
    before='boundary_country'
  }}
{{/map.source}}
