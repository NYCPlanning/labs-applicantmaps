{{#component (concat 'project-geometries/modes/' mode)
  map=map
  geometricProperty=model.proposedGeometry as |edit-mode|
}}
  {{project-geometry-renderer map=map model=model}}

  {{edit-mode.feature-label-form
      options=labelOptions}}

  {{#ember-wormhole to='geometry-type-draw-explainer'}}
    <div class="fade-in-on-load text-small">

      {{back-to-dashboard-button model=model}}

      <h1 class="header-large small-margin-bottom">Rezoning: <span class="text-weight-normal"><br />Commercial Overlays</span></h1>
      <p><a href='https://www1.nyc.gov/site/planning/zoning/districts-tools/commercial-districts-c1-c8.page' target="_blank">Commercial Overlays</a> are C1 or C2 district mapped within residential districts to serve local retail needs. These boundaries are not dependent on lot lines and can sometimes intersect tax lots.</p>

      <hr />

      <p>Overlays are usually drawn to the <strong>lot boundary</strong>.</p>
      <div>
        <img src="/img/gif-commercial-overlays.gif" alt="Draw Commercial Overlays" class="shadowed" />
      </div>

      <hr />

      {{#edit-mode.button
        enabled=isReadyToProceed
        handleClick=(action 'save')}}
        Save
        <small style="display:block;line-height:1.75;">Commercial Overlays</small>
      {{/edit-mode.button}}
    </div>
  {{/ember-wormhole}}
{{/component}}

