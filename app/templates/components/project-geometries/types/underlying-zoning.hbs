{{#project-geometries/draw-lots-to-union
  mode=mode
  map=map
  geometricProperty=model.underlyingZoning as |selection|
}}
  {{selection.mode.feature-label-form
    options=labelOptions
  }}

  {{#ember-wormhole to='geometry-type-draw-explainer'}}
    <div class="text-small">
      <h1 class="header-large small-margin-bottom">Rezoning: <span class="text-weight-normal"><br>Underlying Zoning Districts</span></h1>
      <p><a href='https://www1.nyc.gov/site/planning/zoning/districts-tools.page' target="_blank">Zoning Districts</a> are residential, commercial, or manufacÂ­turing areas within which regulations govern land use and building bulk.</p>

      <hr />
      <p>Districts usually extend to the <strong>street centerline</strong>.</p>
      <div>
          <img src="/img/gif-underlying-zoning.gif" alt="Draw Underlying Zoning" class="shadowed" />
      </div>
      <hr />

      {{#selection.button
        enabled=model.hasDirtyAttributes
        handleClick=(action 'save')}}
        Save
        <small style="display:block;line-height:1.75;">Zoning Districts</small>
      {{/selection.button}}
    </div>
  {{/ember-wormhole}}
{{/project-geometries/draw-lots-to-union}}

{{#map.source options=(mapbox-geojson-source model.underlyingZoning) as |source|}}
  {{source.layer
    layer=underlyingZoningLayer
    before='boundary_country'
  }}
  {{source.layer
    layer=underlyingZoningLabelsLayer
    before='boundary_country'
  }}
{{/map.source}}
