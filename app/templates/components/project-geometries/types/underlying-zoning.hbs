{{#component (concat 'project-geometries/modes/' mode)
  map=map
  geometricProperty=model.proposedGeometry as |edit-mode|
}}
  {{project-geometry-renderer map=map model=model}}

  {{edit-mode.feature-label-form
      options=labelOptions}}

  {{#ember-wormhole to='geometry-type-draw-explainer'}}
    <div class="fade-in-on-load text-small">

      {{back-to-dashboard-button model=model}}

      <h1 class="header-large small-margin-bottom">Rezoning: <span class="text-weight-normal"><br />Underlying Zoning Districts</span></h1>
      <p><a href='https://www1.nyc.gov/site/planning/zoning/districts-tools.page' target="_blank">Zoning Districts</a> are residential, commercial, or manufacturing areas within which regulations govern land use and building bulk.</p>
      <p>Remember, if you are moving district boundaries or mapping new district, you must remove existing district(s) from the rezoning area as well as drawing the new boundaries.</p>

      <hr />

      <p>Districts usually extend to the <strong>street centerline</strong>.</p>
      <div>
          <img src="/img/gif-underlying-zoning.gif" alt="Draw Underlying Zoning" class="shadowed" />
      </div>
      <hr />

      {{#edit-mode.button
        enabled=isReadyToProceed
        handleClick=(action 'save')}}
        Save
        <small style="display:block;line-height:1.75;">Zoning Districts</small>
      {{/edit-mode.button}}
    </div>
  {{/ember-wormhole}}
{{/component}}

{{#map.source options=(mapbox-geojson-source model.proposedGeometry) as |source|}}
  {{source.layer
    layer=underlyingZoningLayer
    before='boundary_country'
  }}
  {{source.layer
    layer=underlyingZoningLabelsLayer
    before='boundary_country'
  }}
{{/map.source}}
