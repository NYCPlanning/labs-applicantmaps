{{!-- invoke the mode and pass its context --}}
{{#component componentForMode
  map=map
  geometricProperty=geometricPropertyForType.proposedGeometry as |edit-mode|
}}
  {{!-- render the common reference geometries --}}
  {{project-geometry-renderer map=map model=model}}

  {{!-- invoke the type component --}}
  {{component componentForType
    model=geometricPropertyForType
    mode=mode
    map=map
    editMode=edit-mode
    isReadyToProceed=isReadyToProceed
    save=(action 'save')}}
{{/component}}

{{yield}}
