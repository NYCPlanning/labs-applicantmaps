{{!-- TODO: Rename type-renderer (singular) --}}

{{!-- render the common reference geometries --}}
{{project-geometry-renderer map=map model=model type=type}}

{{!-- invoke the mode and pass its context --}}
{{!-- TODO: these need to be inverted so that changes across types
      trigger re-renders --}}

{{!-- invoke the type component --}}
{{!-- pass down the mode component --}}
{{#component componentForType
  model=geometricPropertyForType
  mode=mode
  map=map
  isReadyToProceed=geometricPropertyForType.isReadyToProceed
  save=(action 'save')
  modeComponent=(component componentForMode
    map=map
    geometricProperty=geometricPropertyForMode)
}}
  <div class="cell shrink" style="padding-right:1rem;">
    {{back-to-dashboard-button model=geometricPropertyForType type=type mode=mode}}
  </div>
{{/component}}

{{yield}}
